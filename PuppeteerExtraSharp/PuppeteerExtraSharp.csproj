<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <LangVersion>latest</LangVersion>
        <Version>3.0.0</Version>
        <RepositoryUrl>https://github.com/Overmiind/Puppeteer-sharp-extra</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>puppeteer-extra recaptcha browser-automation browser-extension browser puppeteer netcore netcore80 stealth-client browser-testing c# twocaptcha anticaptcha block-resources adblock dotnet undetectable-browser</PackageTags>
        <PackageProjectUrl>https://github.com/Overmiind/Puppeteer-sharp-extra</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <UserSecretsId>945328fb-3e7e-4518-99f8-ec578bf688b1</UserSecretsId>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <TargetFramework>net8.0</TargetFramework>
        <Title>PuppeteerExtraSharp</Title>
        <Authors>Overmind</Authors>
        <PackageReleaseNotes>
            - Upgraded to PuppeteerSharp 20.0. This may require code updates due to upstream API changes.
            - Block Resources plugin fully rewritten with a clearer rule builder and more predictable behavior.
            - reCAPTCHA plugin fully rewritten with improved detection and support for v2, v3, and invisible challenges, plus new configuration options.
            - Stealth plugin stability and evasion fixes aligned with recent Chromium changes.
            - Dropped dependency on RestSharp; HTTP calls now use built-in primitives.
            - General code cleanup, modernization, and consistency improvements. </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <None Remove="Plugins\ExtraStealth\Scripts\ChromeApp.js"/>
        <None Remove="Plugins\ExtraStealth\Scripts\Codec.js"/>
        <None Remove="Plugins\ExtraStealth\Scripts\Frame.js"/>
